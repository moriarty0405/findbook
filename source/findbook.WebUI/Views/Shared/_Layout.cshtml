<body>
    <div class="top_div">
	    <a name="return_top"></a>
	    <div class="top_header">
		    <!--==============================logo================================-->
		    @*<a href="Home/Index" class="top_logo_img"></a>*@
            @Html.RouteLink(" ", new {
                   Controller = "Home",
                   Action = "Index"
               }, new { @class = "top_logo_img" })
		    <!--==============================nav================================-->
		    <div class="top_nav">
                @*<a href="Home/Index" class="selected">翻书</a>*@
                @Html.RouteLink("首页", new {
                    Controller = "Home",
                    Action = "Index"
                   }, new { @class = "selected", @id="index" })

			    @*<a href="Home/Free" class="free">免费</a>*@
                @Html.RouteLink("免费", new {
                    Controller = "Home",
                    Action = "Free"
                   }, new { @id = "free" })

			    @*<a href="#" class="">推荐</a>*@
                @Html.RouteLink("推荐", new {
                    Controller = "Home",
                    Action = "Recommend"
                   }, new { @id = "recommed" })

			    
			    @*<a href="#" class="">消息</a>*@
                @{
                    if (authenticated) {
                        @Html.RouteLink("发现", new {
                           Controller = "Home",
                           Action = "Find",
                           userID = userID
                        })
                        
                        @*<a href="#">私信</a>*@
                        @Html.RouteLink("消息", new {
                       Controller = "SysMessage",
                       Action = "UnRead",
