@model findbook.Domain.Entities.GPrivates

<li>
	<img class="hr1" src="../../Content/Images/web/hr.gif" width="580px"/>
	<div class="user_comment_img">
		<a href="#" target="_blank"><img src="../../Content/Images/users/author.jpg" width="40px" height="40px"/></a>		
	</div>
	<div class="user_comment_content">
		@*<a href="#" target="_blank">@Model.sUserName</a>*@
        @Html.RouteLink(Model.sUserName, new {
                                        Controller = "Page",
                                        Action = "List",
                                        userID = @Model.sUserID,
                                    })
		<p class="comment_content">@Model.lMes</p>
		<p class="comment_content_time">@Model.lTime</p>
	</div>
	<div class="comment_content_reply">
		@*<a href="#" target="_blank">共10条对话</a>|*@
        @Html.RouteLink("共" + Model.pNumber +"条对话|", new {
                                    Controller = "Private",
                                    Action = "DetailList",
                                    rUserID = @Model.rUserID,
                                    sUserID = @Model.sUserID
                                    })
		@*<a href="#" target="_blank">回复</a>|*@
        @Html.RouteLink("回复|", new {
                                    Controller = "Private",
                                    Action = "DetailList",
                                    rUserID = @Model.rUserID,
                                    sUserID = @Model.sUserID
                                    })
		<a href="#">删除</a>
	</div>
</li>