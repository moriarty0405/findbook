			<ul>
                @foreach (var m in Model.Privates) {
                    //发给我的私信
                    if (m.rUserID.Equals(userID)) {
                        Html.RenderPartial("ReceivedPrivateDetail", m);
                    } else {                      
                        //显示我发出的私信
                        Html.RenderPartial("SentPrivateDetail", m);
                    }
                    
                }
			</ul>

