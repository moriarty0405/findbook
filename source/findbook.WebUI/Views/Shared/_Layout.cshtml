                   }, new { @id = "sysMes" })


                        <a href="#" class="" id="jiaoyi">交易</a>
                        
                        <div class="my_purchase">
                            <ul>
                                <li>
                                    @Html.RouteLink("我买的", new {
                                       Controller = "Purchase",
                                       Action = "UnPurchase",
                                       userID = userID
                                   })
                                </li>
                                <li>
                                    @Html.RouteLink("我卖的", new {
