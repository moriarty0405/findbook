@model findbook.WebUI.Models.SysMesView

@{
    ViewBag.Title = "已读的消息";
    Layout = "~/Views/Shared/_SysMesLayout.cshtml";
}

@*设置navigator中的标签为active*@
<script type="text/javascript">
    $(function () {
        $("#Read").addClass("active")
    })     
</script>

<div class="tab-pane active" id="tab5">
	<div class="my_message">
         <div class="clear"></div>
		<p class="c21">已读的消息</p>
		<br />
		<div class="message">
			<ul>
				@foreach (var m in Model.SystemMessages) {
                    Html.RenderPartial("ReadSysMes", m);
                }
			</ul>
		</div>
        <div class="pager">
            @Html.PageLinks(Model.smpg, x => Url.Action("Read", new { page = x }))
        </div>
	</div>
</div>


